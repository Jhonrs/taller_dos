<div class="filters">
    <select class="filters__sex">
        <option value="" disabled="true" selected="true">Sex</option>
        <option value="man">Man</option>
        <option value="woman">Woman</option>

    </select>
</div>

<main>
    <div class="content">
        <div class="content__products">
            {{#each products}}
            <div class="shoes">

                <a href="/product/{{title}}/{{_id}}" class="shoes__link">

                    <img class="shoes__img" src="{{img}}" alt="">

                    <div class="shoes__information">
                        <div class="shoes__name">
                            <h3>{{title}}</h3>
                        </div>
                        <div class="shoes__price">
                            <h4>${{price}}</h4>
                        </div>
                        <div class="shoes__gender">
                            <h4>{{gender}}</h4>
                        </div>



                </a>

            </div>
            <button class="btn__add btn__add--position" class="btn__add" data-title=""="{{title}}"
            data-price="{{price}}"
            data-id="{{_id}}"
            data-img="{{img}}">AÃ‘ADIR AL CARRITO</button>

        </div>
        {{/each}}
    </div>
    </div>
</main>

